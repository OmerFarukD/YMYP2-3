@model List<Product>

<h1 class="text-warning bg-danger fs-1 fst-italic">Ürünler Sayfasına hoşgeldiniz!!!!</h1>


<a asp-controller="Products" asp-action="Add" class="btn btn-outline-success mb-3">Ürün Ekle</a>
<table class="table table-warning table-hover table-striped">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Ad</th>
            <th scope="col">Fiyat $</th>
            <th scope="col">Stok</th>
            <th scope="col">Kategori</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>@item.CategoryName</td>
                <td><a style="text-decoration:none;" asp-controller="Products" asp-action="Detail" asp-route-id="@item.Id">Detaya Git</a></td>
                <td><a style="text-decoration:none;" asp-controller="Products" asp-action="ProductNameContains" asp-route-productName="@item.Name"></a></td>
            </tr>
        }



    </tbody>
</table>
